#
# Generic HWSPINLOCK framework
#

# HWSPINLOCK always gets selected by whoever wants it.
config HWSPINLOCK
	tristate

menu "Hardware Spinlock drivers"

config HWSPINLOCK_OMAP
	tristate "OMAP Hardware Spinlock device"
	depends on ARCH_OMAP4 || SOC_OMAP5 || SOC_DRA7XX || SOC_AM33XX || SOC_AM43XX
	select HWSPINLOCK
	help
	  Say y here to support the OMAP Hardware Spinlock device (firstly
	  introduced in OMAP4).

	  If unsure, say N.

config HWSPINLOCK_OMAP_TEST
	tristate "OMAP Hardware Spinlock test driver"
	depends on HWSPINLOCK_OMAP
	default m
	help
	  Say Y here to perform tests on the OMAP hwspinlock implementation.
          It is recommended to build this test as a module always.

	  Say N, unless you absolutely know what you are doing.

config HSEM_U8500
	tristate "STE Hardware Semaphore functionality"
	depends on ARCH_U8500
	select HWSPINLOCK
	help
	  Say y here to support the STE Hardware Semaphore functionality, which
	  provides a synchronisation mechanism for the various processor on the
	  SoC.

	  If unsure, say N.

endmenu
